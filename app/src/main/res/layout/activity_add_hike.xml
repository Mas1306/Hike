<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F6F6"
    tools:context=".AddActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseAdd"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/ic_close_24"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck"/>

        <TextView
            android:id="@+id/titleHike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="10dp"
            android:text="@string/hike_name_title"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/hikeNameLayout"
            app:layout_constraintBottom_toTopOf="@+id/hikeNameLayout"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hikeNameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:boxBackgroundColor="#F8F6F6"
            app:boxStrokeColor="#EDECEC"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false"
            android:layout_marginTop="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNameHike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hike_name_information"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="#767474"
                android:textColorHint="#767474"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="10dp"
            android:text="@string/hike_location_title"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/hikeLocationLayout"
            app:layout_constraintBottom_toTopOf="@+id/hikeLocationLayout"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hikeLocationLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:boxBackgroundColor="#F8F6F6"
            app:boxStrokeColor="#EDECEC"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLocationHike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hike_location_information"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="#767474"
                android:textColorHint="#767474"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="10dp"
            android:text="@string/hike_date_title"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/hikeDateLayout"
            app:layout_constraintBottom_toTopOf="@+id/hikeDateLayout"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hikeDateLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:boxBackgroundColor="#F8F6F6"
            app:boxStrokeColor="#EDECEC"
            app:boxStrokeWidth="1dp"
            app:endIconDrawable="@drawable/ic_calendar_18"
            app:endIconTint="#767474"
            app:endIconMode="custom"
            app:hintEnabled="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="270dp"
            app:rippleColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDateHike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hike_date_information"
                android:inputType="none"
                android:focusable="false"
                android:paddingStart="10dp"
                android:textColor="#767474"
                android:textColorHint="#767474"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="10dp"
            android:text="@string/hike_length_title"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/hikeLengthLayout"
            app:layout_constraintBottom_toTopOf="@+id/hikeLengthLayout"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hikeLengthLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:boxBackgroundColor="#F8F6F6"
            app:boxStrokeColor="#EDECEC"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false"
            android:layout_marginTop="360dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLengthHike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hike_length_information"
                android:inputType="number"
                android:maxLength="3"
                android:paddingStart="10dp"
                android:textColor="#767474"
                android:textColorHint="#767474"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="10dp"
            android:text="@string/hike_level_title"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/hikeLevelLayout"
            app:layout_constraintBottom_toTopOf="@+id/hikeLevelLayout"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hikeLevelLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            app:boxBackgroundColor="#F8F6F6"
            app:boxStrokeColor="#EDECEC"
            app:boxStrokeWidth="1dp"
            app:endIconMode="dropdown_menu"
            app:hintEnabled="true"
            android:layout_marginTop="450dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <AutoCompleteTextView
                android:id="@+id/autoCompleteDifficulty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:hint="@string/hike_level_information"
                android:textColor="#767474"
                android:textColorHint="#767474"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:paddingVertical="0dp"
                android:gravity="center_vertical"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hikeAvailableLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#F8F6F6"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hike_available_information"
                    android:textColor="#767474"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingEnd="14dp"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color"
                    tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="10dp"
            android:text="@string/hike_description_title"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/hikeDescriptionLayout"
            app:layout_constraintBottom_toTopOf="@+id/hikeDescriptionLayout"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hikeDescriptionLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="630dp"
            app:boxBackgroundColor="#F8F6F6"
            app:boxStrokeColor="#EDECEC"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="true"
            app:hintTextColor="#767474"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescriptionHike"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="@string/hike_description_information"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#767474"
                android:textColorHint="#767474"
                android:textSize="12sp"
                android:scrollbars="vertical"
                android:overScrollMode="always"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateHike"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#48752C"
            android:elevation="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="@string/create_hike"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:cornerRadius="5dp"
            app:iconPadding="4dp"
            app:strokeColor="#223812"
            app:strokeWidth="1dp"
            app:rippleColor="#33FFFFFF"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="800dp"
            tools:ignore="TouchTargetSizeCheck"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>